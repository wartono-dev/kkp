<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Activity.Teknisi.UpdateTeknisi">



    <TextView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="List Pesanan Teknisi"
        android:textStyle="bold"
        android:background="#4D5FFD"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/idpesan"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail"
        android:text="   1"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idpesan"
        android:text="   wibawa bangkit"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama"
        android:text="  sumur batu no.23 rt 03/05"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/kota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alamat"
        android:text="  jakarta pusat"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kota"
        android:text="   proses"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"
        android:text="   2021-01-23"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/jenispesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tanggal"
        android:text="   service"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/namateknisi"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jenispesanan"
        android:text=" nama teknisi"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nomerkontak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namateknisi"
        android:text=" 089659127161"
        android:textStyle="bold"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/btnupdate"
        android:layout_marginTop="30dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomer_kontak"
        android:text="Update"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="24sp"/>

</RelativeLayout>