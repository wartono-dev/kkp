<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutlist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="20dp"
    app:cardBackgroundColor="#07CC0F"
    android:layout_gravity="center_horizontal"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="15dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="1"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_listnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="sans-serif-black"
                android:text="Wibawa Bangkit"
                android:textSize="15sp"
                android:textColor="#010B1B"/>
            <TextView
                android:id="@+id/list_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proses"
                android:layout_marginTop="12dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textColor="#FF5722"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/kota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textStyle="normal"
                android:text="Jakarta Pusat"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="7dp"/>
            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textStyle="normal"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="7dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textStyle="normal"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="7dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/jenis_pesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textStyle="normal"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="7dp"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

